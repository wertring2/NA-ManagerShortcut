<Window x:Class="NA_ManagerShortcut.Views.SaveProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Network Profile" 
        Height="200" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
    
    <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#3E3E42" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#2D2D30" CornerRadius="10,10,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Save Network Profile" 
                             Foreground="White" 
                             VerticalAlignment="Center" 
                             Margin="15,0,0,0"
                             FontSize="14" FontWeight="SemiBold"/>
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Text="Profile Name:" Foreground="White" Margin="0,0,0,5"/>
                <TextBox x:Name="ProfileNameBox" 
                       Background="#2D2D30" 
                       Foreground="White" 
                       BorderBrush="#3E3E42"
                       BorderThickness="1"
                       Padding="5"
                       CaretBrush="White"/>
                
                <TextBlock Text="Description:" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="ProfileDescriptionBox" 
                       Background="#2D2D30" 
                       Foreground="White" 
                       BorderBrush="#3E3E42"
                       BorderThickness="1"
                       Padding="5"
                       CaretBrush="White"
                       Height="40"
                       TextWrapping="Wrap"
                       AcceptsReturn="True"/>
            </StackPanel>

            <Border Grid.Row="2" Background="#252526" CornerRadius="0,0,10,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0">
                    <Button Content="Save" Width="80" Click="SaveButton_Click"
                            Background="#007ACC" Foreground="White" 
                            BorderThickness="0" Padding="5" Cursor="Hand"/>
                    <Button Content="Cancel" Width="80" Margin="10,0,0,0" Click="CancelButton_Click"
                            Background="#5A5A5A" Foreground="White" 
                            BorderThickness="0" Padding="5" Cursor="Hand"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>