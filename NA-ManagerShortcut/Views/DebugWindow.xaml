<Window x:Class="NA_ManagerShortcut.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Claude Code Debug Monitor"
        Height="600" Width="900"
        Background="#1E1E1E"
        Foreground="White"
        WindowStartupLocation="CenterScreen"
        Topmost="True">
    
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3E3E42"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="#2D2D30" BorderBrush="#3E3E42" 
                                BorderThickness="1,1,1,0" Margin="0,0,2,0">
                            <ContentPresenter ContentSource="Header" Margin="10,5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <WrapPanel>
                <Button Name="StartCaptureBtn" Click="StartCapture_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="▶" Foreground="LimeGreen" Margin="0,0,5,0"/>
                        <TextBlock Text="Start Capture"/>
                    </StackPanel>
                </Button>
                
                <Button Name="StopCaptureBtn" Click="StopCapture_Click" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="■" Foreground="Red" Margin="0,0,5,0"/>
                        <TextBlock Text="Stop Capture"/>
                    </StackPanel>
                </Button>
                
                <CheckBox Name="AutoFixCheckBox" Content="Enable Auto-Fix" 
                          Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
                
                <Separator Width="1" Height="20" Background="#3E3E42" Margin="10,0"/>
                
                <Button Name="AnalyzeBtn" Click="Analyze_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔍" Margin="0,0,5,0"/>
                        <TextBlock Text="Analyze"/>
                    </StackPanel>
                </Button>
                
                <Button Name="GenerateReportBtn" Click="GenerateReport_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊" Margin="0,0,5,0"/>
                        <TextBlock Text="Generate Report"/>
                    </StackPanel>
                </Button>
                
                <Button Name="ClearBtn" Click="Clear_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🗑" Margin="0,0,5,0"/>
                        <TextBlock Text="Clear"/>
                    </StackPanel>
                </Button>
                
                <Separator Width="1" Height="20" Background="#3E3E42" Margin="10,0"/>
                
                <TextBlock Text="Status:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <TextBlock Name="StatusText" Text="Idle" Foreground="Gray" 
                           VerticalAlignment="Center" FontWeight="Bold"/>
            </WrapPanel>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Background="#1E1E1E" BorderThickness="0">
            
            <!-- Live Output Tab -->
            <TabItem Header="Live Output">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ScrollViewer Name="OutputScrollViewer" Grid.Row="0" 
                                  VerticalScrollBarVisibility="Auto">
                        <TextBox Name="OutputTextBox" 
                                 Background="#1E1E1E" 
                                 Foreground="LightGray"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 IsReadOnly="True"
                                 TextWrapping="Wrap"
                                 BorderThickness="0"/>
                    </ScrollViewer>
                    
                    <CheckBox Grid.Row="1" Name="AutoScrollCheckBox" 
                              Content="Auto-scroll" IsChecked="True"
                              Foreground="White" Margin="5"/>
                </Grid>
            </TabItem>
            
            <!-- Errors Tab -->
            <TabItem Header="Errors">
                <DataGrid Name="ErrorsGrid" 
                          Background="#1E1E1E"
                          Foreground="White"
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Time" Binding="{Binding Timestamp, StringFormat=HH:mm:ss}" Width="80"/>
                        <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="200"/>
                        <DataGridTextColumn Header="Error" Binding="{Binding Message}" Width="*"/>
                        <DataGridTemplateColumn Header="Action" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Fix" Click="ApplyFix_Click" 
                                            Tag="{Binding}" Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            
            <!-- Performance Tab -->
            <TabItem Header="Performance">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
                        <TextBlock Text="CPU:" Margin="0,0,5,0"/>
                        <TextBlock Name="CpuText" Text="0%" Width="50" FontWeight="Bold"/>
                        
                        <TextBlock Text="Memory:" Margin="20,0,5,0"/>
                        <TextBlock Name="MemoryText" Text="0 MB" Width="80" FontWeight="Bold"/>
                        
                        <TextBlock Text="Events/sec:" Margin="20,0,5,0"/>
                        <TextBlock Name="EventRateText" Text="0" Width="50" FontWeight="Bold"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" Name="PerformanceGrid"
                              Background="#1E1E1E"
                              Foreground="White"
                              BorderThickness="0"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Metric" Binding="{Binding Metric}" Width="200"/>
                            <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="100"/>
                            <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="80"/>
                            <DataGridTextColumn Header="Threshold" Binding="{Binding Threshold}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Auto-Fix Suggestions Tab -->
            <TabItem Header="Auto-Fix">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <ListBox Name="SuggestionsListBox"
                             Background="#1E1E1E"
                             Foreground="White"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" Margin="5" Padding="10" CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding ErrorType}" FontWeight="Bold" Foreground="Orange"/>
                                        <TextBlock Text="{Binding Suggestion}" Margin="0,5" TextWrapping="Wrap"/>
                                        <TextBox Text="{Binding CodeFix}" 
                                                 IsReadOnly="True"
                                                 Background="#1E1E1E"
                                                 Foreground="LightGreen"
                                                 FontFamily="Consolas"
                                                 Padding="5"
                                                 Margin="0,5"/>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="Severity:" Margin="0,0,5,0"/>
                                            <TextBlock Text="{Binding Severity}" FontWeight="Bold"
                                                       Foreground="{Binding SeverityColor}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <Button Grid.Row="1" Name="ApplyAllFixesBtn" 
                            Content="Apply All Suggested Fixes"
                            Click="ApplyAllFixes_Click"
                            Margin="10"/>
                </Grid>
            </TabItem>
            
            <!-- Command Interface Tab -->
            <TabItem Header="Commands">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBox Name="CommandOutputTextBox"
                             Grid.Row="0"
                             Background="#1E1E1E"
                             Foreground="LightGray"
                             FontFamily="Consolas"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Name="CommandInputTextBox"
                                 Grid.Column="0"
                                 Background="#2D2D30"
                                 Foreground="White"
                                 FontFamily="Consolas"
                                 Margin="5"
                                 KeyDown="CommandInput_KeyDown"/>
                        
                        <Button Grid.Column="1" Content="Execute" 
                                Click="ExecuteCommand_Click"
                                Margin="0,5,5,5"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Events:" Margin="0,0,5,0"/>
                    <TextBlock Name="EventCountText" Text="0" FontWeight="Bold" Margin="0,0,10,0"/>
                    
                    <TextBlock Text="Errors:" Margin="0,0,5,0"/>
                    <TextBlock Name="ErrorCountText" Text="0" FontWeight="Bold" Foreground="Yellow" Margin="0,0,10,0"/>
                    
                    <TextBlock Text="Warnings:" Margin="0,0,5,0"/>
                    <TextBlock Name="WarningCountText" Text="0" FontWeight="Bold" Foreground="Orange"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" Name="LastEventText" 
                           Text="Ready" TextAlignment="Center"/>
                
                <TextBlock Grid.Column="2" Name="TimeText" 
                           Text="00:00:00" FontFamily="Consolas"/>
            </Grid>
        </Border>
    </Grid>
</Window>