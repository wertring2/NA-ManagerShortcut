<Window x:Class="NA_ManagerShortcut.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NA_ManagerShortcut"
        xmlns:converters="clr-namespace:NA_ManagerShortcut.Converters"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Network Adapter Manager" 
        Height="500" Width="350"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual"
        Left="50" Top="50"
        Icon="favicon.ico">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToHideTextConverter x:Key="BoolToHideTextConverter"/>
        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="Border" CornerRadius="10" 
                                    Background="#FF4B4B" Width="40" Height="20">
                                <Grid>
                                    <!-- Loading indicator (hidden by default) -->
                                    <Ellipse x:Name="LoadingIndicator" Width="12" Height="12" 
                                           Fill="White" HorizontalAlignment="Center"
                                           Opacity="0" Visibility="Collapsed">
                                        <Ellipse.RenderTransform>
                                            <RotateTransform x:Name="LoadingRotation" CenterX="6" CenterY="6"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                    
                                    <!-- Main switch ellipse -->
                                    <Ellipse x:Name="Ellipse" Width="16" Height="16" 
                                           Fill="White" HorizontalAlignment="Left" 
                                           Margin="2,0,0,0">
                                        <Ellipse.RenderTransform>
                                            <TranslateTransform X="0"/>
                                        </Ellipse.RenderTransform>
                                    </Ellipse>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Transitioning state -->
                            <DataTrigger Binding="{Binding IsTransitioning}" Value="True">
                                <DataTrigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Hide main ellipse -->
                                            <DoubleAnimation Storyboard.TargetName="Ellipse" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0" Duration="0:0:0.1"/>
                                            <!-- Show loading indicator -->
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LoadingIndicator" 
                                                                          Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetName="LoadingIndicator" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0.8" Duration="0:0:0.1"/>
                                            <!-- Pulse animation -->
                                            <DoubleAnimation Storyboard.TargetName="LoadingIndicator" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           From="0.3" To="0.8" Duration="0:0:0.5"
                                                           RepeatBehavior="Forever" AutoReverse="True"/>
                                            <!-- Change to yellow during transition -->
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                          Storyboard.TargetProperty="Background.Color" 
                                                          To="#FFA500" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.EnterActions>
                                <DataTrigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <!-- Show main ellipse -->
                                            <DoubleAnimation Storyboard.TargetName="Ellipse" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="1" Duration="0:0:0.1"/>
                                            <!-- Hide loading indicator -->
                                            <DoubleAnimation Storyboard.TargetName="LoadingIndicator" 
                                                           Storyboard.TargetProperty="Opacity" 
                                                           To="0" Duration="0:0:0.1"/>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LoadingIndicator" 
                                                                          Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.1" Value="{x:Static Visibility.Collapsed}"/>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </DataTrigger.ExitActions>
                            </DataTrigger>
                            
                            <!-- Normal checked/unchecked states -->
                            <Trigger Property="IsChecked" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                          Storyboard.TargetProperty="Background.Color" 
                                                          To="#4CAF50" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="Ellipse" 
                                                           Storyboard.TargetProperty="RenderTransform.X" 
                                                           To="20" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="Border" 
                                                          Storyboard.TargetProperty="Background.Color" 
                                                          To="#FF4B4B" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="Ellipse" 
                                                           Storyboard.TargetProperty="RenderTransform.X" 
                                                           To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            
                            <!-- Disabled state during transition -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.8"/>
                                <Setter Property="Cursor" Value="Wait"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#1E1E1E" CornerRadius="10" BorderBrush="#3E3E42" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#2D2D30" CornerRadius="10,10,0,0" 
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Network Adapter Manager" 
                             Foreground="White" 
                             VerticalAlignment="Center" 
                             Margin="10,0,0,0"
                             FontSize="12"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <CheckBox Content="Show Hidden" 
                                IsChecked="{Binding ShowHiddenAdapters}" 
                                Foreground="White" 
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                ToolTip="Show/Hide hidden adapters"/>
                        <Button Content="─" Width="30" Height="32" 
                                Background="Transparent" Foreground="White" 
                                BorderThickness="0" Click="MinimizeButton_Click"/>
                        <Button Content="✕" Width="30" Height="32" 
                                Background="Transparent" Foreground="White" 
                                BorderThickness="0" Click="CloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="#2D2D30" CornerRadius="4" Margin="0,0,5,0">
                    <Grid>
                        <TextBlock Text="🔍" Foreground="#8E8E8E" 
                                 VerticalAlignment="Center" Margin="8,0,0,0"/>
                        <TextBox x:Name="SearchBox" 
                               Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                               Background="Transparent" 
                               Foreground="White" 
                               BorderThickness="0"
                               VerticalAlignment="Center"
                               Margin="25,0,5,0"
                               CaretBrush="White"/>
                        <TextBlock Text="Search adapters..." 
                                 Foreground="#8E8E8E" 
                                 IsHitTestVisible="False"
                                 VerticalAlignment="Center"
                                 Margin="25,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=SearchBox, Path=Text}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource ModernButton}" 
                            Command="{Binding RefreshCommand}"
                            ToolTip="Refresh" Width="35" Height="35">
                        <TextBlock Text="🔄" FontSize="16"/>
                    </Button>
                    <Button Style="{StaticResource ModernButton}" 
                            Command="{Binding ToggleProfilePanelCommand}"
                            ToolTip="Profiles" Width="35" Height="35" Margin="5,0,0,0">
                        <TextBlock Text="📁" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>

            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="5">
                <ItemsControl ItemsSource="{Binding FilteredAdapters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2D2D30" CornerRadius="4" Margin="0,2" 
                                    MouseLeftButtonDown="AdapterItem_MouseLeftButtonDown"
                                    Tag="{Binding}">
                                <Grid Margin="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" Text="{Binding DisplayName}" 
                                                 Foreground="White" FontWeight="Bold"
                                                 ToolTip="{Binding Name}"/>
                                        <ToggleButton Grid.Column="1" 
                                                    Style="{StaticResource ToggleButtonStyle}"
                                                    IsChecked="{Binding IsEnabled, Mode=OneWay}"
                                                    Click="ToggleAdapter_Click"
                                                    Tag="{Binding}"/>
                                    </Grid>
                                    
                                    <TextBlock Grid.Row="1" Text="{Binding Description}" 
                                             Foreground="#B0B0B0" FontSize="10" 
                                             TextTrimming="CharacterEllipsis"/>
                                    
                                    <Grid Grid.Row="2" Margin="0,4,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Ellipse Grid.Column="0" Width="8" Height="8" 
                                               Margin="0,0,5,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#FF4B4B"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEnabled}" Value="True">
                                                            <Setter Property="Fill" Value="#4CAF50"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        
                                        <TextBlock Grid.Column="1" Foreground="#B0B0B0" FontSize="11">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0} • {1}">
                                                    <Binding Path="Status"/>
                                                    <Binding Path="IpAddress"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Grid>
                                    
                                    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                                              Margin="0,4,0,0">
                                        <TextBlock Foreground="#8E8E8E" FontSize="10" 
                                                 Text="{Binding FormattedBytesReceived, StringFormat='↓ {0}'}" 
                                                 Margin="0,0,10,0"/>
                                        <TextBlock Foreground="#8E8E8E" FontSize="10" 
                                                 Text="{Binding FormattedBytesSent, StringFormat='↑ {0}'}"/>
                                    </StackPanel>
                                </Grid>
                                
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Rename Adapter" Click="RenameAdapter_Click" Tag="{Binding}">
                                            <MenuItem.Icon>
                                                <Path Data="M3,17.25V21h3.75L17.81,9.94l-3.75-3.75L3,17.25z M20.71,7.04c0.39-0.39,0.39-1.02,0-1.41l-2.34-2.34c-0.39-0.39-1.02-0.39-1.41,0l-1.83,1.83 3.75,3.75 1.83-1.83z" 
                                                      Fill="Black" Width="16" Height="16" Stretch="Uniform"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="{Binding IsHidden, Converter={StaticResource BoolToHideTextConverter}, FallbackValue='Hide Adapter'}" 
                                                Click="HideAdapter_Click" Tag="{Binding}">
                                            <MenuItem.Icon>
                                                <Path Data="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" 
                                                      Fill="Black" Width="16" Height="16" Stretch="Uniform"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Configure IP" Click="ConfigureIP_Click" Tag="{Binding}">
                                            <MenuItem.Icon>
                                                <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" 
                                                      Fill="Black" Width="16" Height="16" Stretch="Uniform"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Reset Adapter" Click="ResetAdapter_Click" Tag="{Binding}">
                                            <MenuItem.Icon>
                                                <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" 
                                                      Fill="Black" Width="16" Height="16" Stretch="Uniform"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <MenuItem Header="Renew IP" Click="RenewIP_Click" Tag="{Binding}">
                                            <MenuItem.Icon>
                                                <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" 
                                                      Fill="Black" Width="16" Height="16" Stretch="Uniform"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Copy Details" Click="CopyDetails_Click" Tag="{Binding}">
                                            <MenuItem.Icon>
                                                <Path Data="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z" 
                                                      Fill="Black" Width="16" Height="16" Stretch="Uniform"/>
                                            </MenuItem.Icon>
                                        </MenuItem>
                                    </ContextMenu>
                                </Border.ContextMenu>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border Grid.Row="3" Background="#252526" CornerRadius="0,0,10,10">
                <Grid>
                    <TextBlock Text="{Binding StatusMessage}" 
                             Foreground="#8E8E8E" 
                             VerticalAlignment="Center" 
                             Margin="10,0,0,0"
                             FontSize="11"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Button Style="{StaticResource ModernButton}" 
                                Command="{Binding FlushDnsCommand}"
                                ToolTip="Flush DNS" 
                                Padding="4,2" Margin="2,0">
                            <TextBlock Text="DNS" FontSize="10"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <tb:TaskbarIcon x:Name="TrayIcon"
                          ToolTipText="Network Adapter Manager"
                          IconSource="favicon.ico"
                          Visibility="Visible">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Show" Click="ShowWindow_Click"/>
                        <Separator/>
                        <MenuItem Header="User Guide" Click="UserGuide_Click">
                            <MenuItem.Icon>
                                <Path Data="M11 18h2v-2h-2v2zm1-16C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm0-14c-2.21 0-4 1.79-4 4h2c0-1.1.9-2 2-2s2 .9 2 2c0 2-3 1.75-3 5h2c0-2.25 3-2.5 3-5 0-2.21-1.79-4-4-4z" 
                                      Fill="Black" Width="16" Height="16" Stretch="Uniform"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="About" Click="About_Click">
                            <MenuItem.Icon>
                                <Path Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z" 
                                      Fill="Black" Width="16" Height="16" Stretch="Uniform"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Exit" Click="ExitApplication_Click"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>
        </Grid>
    </Border>
</Window>
